<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_464575"
    android:backgroundTint="@null"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="49dp"
        android:text="Basic Converter"
        android:textAlignment="center"
        android:textColor="#F6EFEF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterValue"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:layout_marginBottom="43dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#F6F2F2"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cnvrttoPOUNDS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="99dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:text="Result"
        android:textAlignment="center"
        android:textColor="#FBF9F9"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnvrttoPOUNDS" />

    <TextView
        android:id="@+id/result"
        android:layout_width="199dp"
        android:layout_height="0dp"
        android:layout_marginBottom="228dp"
        android:textAlignment="center"
        android:textColor="#F8F4F4"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/cnvrttoPOUNDS"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:background="#7A0606"
        android:backgroundTint="#E40F0F"
        android:text="Convert to Pounds"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterValue" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="237dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:text="Enter the number of KG's"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/enterValue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>